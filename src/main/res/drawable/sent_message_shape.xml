<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main shape -->
    <item>
        <shape>
            <solid android:color="@color/blue_primary300" /> <!-- Set the desired background color -->
            <corners android:radius="@dimen/_10sdp" />
            <!-- Adjust the radius to control the roundness of the corners -->
        </shape>
    </item>
    <!-- Tail -->
    <item
        android:right="0dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape>
                <solid android:color="@color/blue_primary300" /> <!-- Use the same color as the background color -->
                <corners android:radius="1dp" /> <!-- Adjust the radius of the tail -->
            </shape>
        </rotate>
    </item>
</layer-list>

