<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue_primary300" />
            <corners android:topLeftRadius="10sp" android:topRightRadius="10sp" />
            <stroke android:width="1sp" android:color="@color/white" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/blue_primary300" />
            <corners android:topRightRadius="10sp" android:topLeftRadius="10sp" />
            <stroke android:width="1sp" android:color="@color/white" />
        </shape>
    </item>
</selector>