<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_meeting_chat_message_recv"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="4sp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:padding="5sp">

            <ImageView
                android:id="@+id/meetingMsgRecvIvThumb"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/app_logo"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/meetingMsgRecvTvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Someone"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#dddddd"
                    android:layout_marginLeft="10sp"/>

                <TextView
                    android:id="@+id/meetingMsgRecvTvMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/meetingMsgRecvTransTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Translation"
                    android:layout_marginTop="7sp"
                    android:textSize="15sp"
                    android:textColor="#cccccc"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/meetingChatRecvTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:30 am"
            android:layout_gravity="left"
            android:layout_marginLeft="10sp"
            android:textSize="9sp"
            android:textColor="#cccccc"
            />

    </LinearLayout>

</RelativeLayout>