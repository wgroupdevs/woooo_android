<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="wooPeerProps"
            type="com.woooapp.meeting.impl.vm.PeerProps" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:cardBackgroundColor="@color/bg"
        bind:cardCornerRadius="15dp"
        bind:cardUseCompatPadding="false"
        android:clipChildren="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/wooPeerView"
                layout="@layout/woo_view_peer_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:wooPeerViewProps="@{wooPeerProps}" />

<!--            <LinearLayout-->
<!--                android:id="@+id/videoHidden1"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:orientation="vertical"-->
<!--                android:gravity="center"-->
<!--                android:background="@color/blue_primaryDarker"-->
<!--                android:visibility="gone">-->

<!--                <ImageView-->
<!--                    android:id="@+id/wooPeerThumbIv1"-->
<!--                    android:layout_width="100sp"-->
<!--                    android:layout_height="100sp"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:src="@drawable/buddy2" />-->

<!--            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/peerInfoPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5sp"
                android:layout_alignParentRight="true"
                android:layout_margin="3sp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/peerInfoHand"
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/ic_front_hand_white_34"/>

                <ImageView
                    android:id="@+id/peerInfoMic"
                    android:layout_width="22sp"
                    android:layout_height="22sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/baseline_mic_34"/>

                <ImageView
                    android:id="@+id/peerInfoCam"
                    android:layout_width="22sp"
                    android:layout_height="22sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/ic_camera_off_gray"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/peerInfoMore"
                    android:layout_width="22sp"
                    android:layout_height="22sp"
                    android:src="@drawable/ic_menu_dots_vertical_white"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:layout_margin="10sp"
                android:background="@drawable/bg_rounded_blue"
                >

                <TextView
                    android:id="@+id/tvPeerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="1sp"
                    android:text="Peer"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/audio_peer_layout"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:orientation="horizontal"
                android:layout_margin="10sp"
                android:gravity="center"
                android:padding="3sp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_rounded_blue">

                <ImageView
                    android:id="@+id/audio_peer_gif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_audio_giphy"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>