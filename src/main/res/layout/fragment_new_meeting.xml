<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.meeting.NewMeetingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <!--    Mic Camera States-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_30sdp">

                <TextView
                    android:id="@+id/tv_cam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera is Off"
                    android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

                <TextView
                    android:id="@+id/tv_mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Mic is Off"
                    android:textAppearance="@style/TextAppearance.Conversations.Subhead" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/button_mic"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:src="@drawable/ic_mic_off_gray" />


                    <ImageView
                        android:id="@+id/button_cam"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:src="@drawable/ic_camera_off_gray" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="Meeting Name"
                android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

            <eu.siacs.conversations.ui.widget.TextInputEditText
                android:id="@+id/meeting_name_et"
                style="@style/Widget.Conversations.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/textfield_background"
                android:hint="Woooo Meeting Name"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="Meeting URL"
                android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7"
                >

                <eu.siacs.conversations.ui.widget.TextInputEditText
                    android:id="@+id/meeting_url_et"
                    style="@style/Widget.Conversations.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textfield_background"
                    android:hint="https://cc.watchblock.net/meeting/123456"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:enabled="false"
                    android:singleLine="true"
                    android:ellipsize="start"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/meetingCopyUrlBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_copy_all_24"
                    android:layout_weight="6"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/button"
                    android:foreground="?attr/selectableItemBackground"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/start_meeting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button"
                    android:enabled="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Start Meeting"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    />

                <Button
                    android:id="@+id/join_meeting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:background="@drawable/button"
                    android:foreground="?attr/selectableItemBackground"
                    android:enabled="true"
                    android:text="Join Meeting"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"/>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</layout>