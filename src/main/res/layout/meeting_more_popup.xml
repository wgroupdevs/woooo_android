<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/morePopupContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_default"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15sp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/morePopupIvThumb"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/person"
            />

        <TextView
            android:id="@+id/morePopupTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="John Smith"
            android:layout_marginLeft="10sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@android:color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5sp"
            >

            <!-- First Column -->

            <LinearLayout
                android:id="@+id/morePopupButtonMeetingId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:id="@+id/morePopupIvMeetingId"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:id="@+id/morePopupTvMeetingId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Meeting ID"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonVideoQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:id="@+id/morePopupIvVideoQuality"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:id="@+id/morePopupTvVideoQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Manage Video Quality"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonFullscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="View full screen"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonMuteEveryone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Mute Everyone"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonDisableCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Disable Everyone's camera"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonLiveStream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Start live stream"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5sp"
            >

            <!-- Second Column -->

            <LinearLayout
                android:id="@+id/morePopupButtonShareYoutubeVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Share YouTube Video"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonSelectBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Select background"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonSpeakerStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Speaker Stats"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/morePopupButtonSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Settings"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonViewShortcuts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="View shortcuts"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morePopupButtonEmbedMeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5sp"
                >

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/person"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Embed meeting"
                    android:layout_marginLeft="5sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>