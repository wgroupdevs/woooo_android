<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/call_status_ic"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_call_missed_white_18dp" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/call_status_ic"
        app:flexDirection="column"
        android:id="@+id/flexbox_container"
        app:justifyContent="space_between">


        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:text="Dec 18,10:27 AM"
            android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

        <TextView
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outgoing call (3 min)"
            android:textAppearance="@style/TextAppearance.Conversations.Caption" />



    </com.google.android.flexbox.FlexboxLayout>


    <ImageView
        android:id="@+id/ic_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flexbox_container"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/divider_ic" />

    <!--    <ImageView-->
    <!--        android:id="@+id/call_type_ic"-->
    <!--        android:layout_width="@dimen/_20sdp"-->
    <!--        android:layout_height="@dimen/_20sdp"-->
    <!--        android:layout_alignParentEnd="true"-->
    <!--        android:layout_centerVertical="true"-->
    <!--        android:layout_marginTop="@dimen/_2sdp"-->
    <!--        android:layout_marginEnd="@dimen/_5sdp"-->
    <!--        android:src="@drawable/ic_call_white_48dp" />-->


</RelativeLayout>