<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tr_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3/5/22"
            android:textAppearance="@style/TextAppearance.Conversations.Caption" />

        <TextView
            android:id="@+id/tr_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BTC"
            android:textAppearance="@style/TextAppearance.Conversations.Caption" />

        <TextView
            android:id="@+id/tr_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="withdraw"
            android:textAppearance="@style/TextAppearance.Conversations.MiniCap" />

        <TextView
            android:id="@+id/tr_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0"
            android:textAppearance="@style/TextAppearance.Conversations.Caption" />

        <TextView
            android:id="@+id/tr_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="completed"
            android:textAppearance="@style/TextAppearance.Conversations.MiniCap" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/divider_ic" />

</LinearLayout>
