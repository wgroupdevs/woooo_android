<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:background="?attr/colorPrimary"
    android:gravity="center_vertical"
    android:minHeight="?attr/actionBarSize"
    android:paddingTop="@dimen/_5sdp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/toolBar_leading_View"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_margin="@dimen/_5sdp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_arrow_back_24" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/toolbar_profile_photo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:riv_corner_radius="6dp" />

            <EditText
                android:id="@+id/toolbar_search"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edit_text"
                android:drawableStart="@drawable/outline_search_24"
                android:focusable="false"
                android:hint="@string/search"
                android:paddingLeft="@dimen/_10sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <ImageButton
                android:id="@+id/toolbar_notification"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/ic_notifications_white_24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/toolbar_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLength="15"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.Conversations.Subhead"
                android:visibility="gone" />

        </LinearLayout>


        <!--        WALLET-APP-BAR -->
        <RelativeLayout
            android:id="@+id/wallet_main_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <!--            CURRENT-CHAIN-VIEW-->
            <LinearLayout
                android:id="@+id/current_chain_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_border"
                android:padding="@dimen/_5sdp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/chain_ic"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_ethereum" />

                <TextView
                    android:id="@+id/chain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Ethereum"
                    android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ccp_ic_arrow_drop_down" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/connect_wallet_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_border"
                android:padding="@dimen/_8sdp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/metamask" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Disconnected"
                    android:textAppearance="@style/TextAppearance.Conversations.Subhead" />


            </LinearLayout>


            <ImageView
                android:id="@+id/qr_code_scanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_qr_code_scan_white_24dp"

                />


        </RelativeLayout>

    </RelativeLayout>


</androidx.appcompat.widget.Toolbar>

