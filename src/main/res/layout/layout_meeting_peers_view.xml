<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:padding="2sp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:id="@+id/layoutPeerRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_gravity="center"
        >

        <com.woooapp.meeting.impl.views.MeView
            android:id="@+id/meNewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:padding="0sp"
            android:layout_weight="1"
            />

        <com.woooapp.meeting.impl.views.PeerView
            android:id="@+id/peerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:padding="0sp"
            android:layout_weight="1"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPeerRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:visibility="gone"
        android:layout_gravity="center"
        >

        <com.woooapp.meeting.impl.views.PeerView
            android:id="@+id/peerView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:padding="0sp"
            android:layout_weight="1"
            android:visibility="gone"
            />

        <com.woooapp.meeting.impl.views.PeerView
            android:id="@+id/peerView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:padding="0sp"
            android:layout_weight="1"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPeerRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:visibility="gone"
        android:layout_gravity="center"
        >

        <com.woooapp.meeting.impl.views.PeerView
            android:id="@+id/peerView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:padding="0sp"
            android:layout_weight="1"
            android:visibility="gone"
            />

        <com.woooapp.meeting.impl.views.PeerView
            android:id="@+id/peerView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:padding="0sp"
            android:layout_weight="1"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>