<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_primary100"
        android:clipChildren="false"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/ic_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:paddingTop="@dimen/_2sdp"
            android:src="@drawable/divider_ic" />


        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_divider"
            android:layout_above="@id/navigation"
            android:clipChildren="false" />

        <com.leinardi.android.speeddial.SpeedDialView
            android:id="@+id/speed_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/navigation"
            android:layout_gravity="end|bottom"
            android:contentDescription="Add contact"
            app:backgroundTint="?colorPrimary"
            app:sdMainFabClosedBackgroundColor="?colorPrimary"
            app:sdMainFabClosedSrc="@drawable/ic_add_white_24dp"
            app:sdMainFabOpenedBackgroundColor="?colorPrimaryDark"
            app:sdOverlayLayout="@id/overlay"
            app:sdUseReverseAnimationOnClose="true" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="60.dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/blue_primary100"
            android:clipChildren="false"
            android:elevation="0.dp"
            app:elevation="0.dp"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_navigation">


            <ImageView
                android:id="@+id/fab"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/inner_wheel"
                app:elevation="0dp" />


        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>
</layout>
