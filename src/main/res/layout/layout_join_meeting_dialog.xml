<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_default"
    android:orientation="vertical"
    android:padding="10sp"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/ic_join_meeting"
            android:layout_marginLeft="10sp"/>

        <TextView
            android:id="@+id/titleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Meeting"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_margin="5sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_margin="5sp"
        android:background="@color/blue_primary100"
        />

    <TextView
        android:id="@+id/textDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:layout_marginTop="20sp"
        android:text="Please Enter the Meeting ID to join meeting"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textfield_background"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="10sp"
        android:inputType="number"
        android:hint="Meeting ID"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@color/blue_primary100"
        />

    <Button
        android:id="@+id/btnOkDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_rounded_button_default"
        android:enabled="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Join"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        />

    <Button
        android:id="@+id/btnCancelDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_rounded_button_red"
        android:enabled="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Cancel"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp"
        />

</LinearLayout>