<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/bg_border"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Meeting Name"
            android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

        <eu.siacs.conversations.ui.widget.TextInputEditText
            android:id="@+id/meeting_name_et"
            style="@style/Widget.Conversations.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/textfield_background"
            android:hint="Woooo Meeting Name"
            android:imeOptions="actionNext"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Date"
            android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

        <eu.siacs.conversations.ui.widget.TextInputEditText
            android:id="@+id/meeting_date_et"
            style="@style/Widget.Conversations.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/textfield_background"
            android:hint="Meeting Date"
            android:imeOptions="actionNext"
            android:focusable="false"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Start Time"
            android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

        <eu.siacs.conversations.ui.widget.TextInputEditText
            android:id="@+id/meeting_start_time_et"
            style="@style/Widget.Conversations.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/textfield_background"
            android:hint="select meeting start time"
            android:imeOptions="actionNext"
            android:focusable="false"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Meeting Duration"
            android:textAppearance="@style/TextAppearance.Conversations.Subhead" />

        <eu.siacs.conversations.ui.widget.TextInputEditText
            android:id="@+id/meeting_duration_et"
            style="@style/Widget.Conversations.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/textfield_background"
            android:hint="enter duration in minutes"
            android:imeOptions="actionNext"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:inputType="numberDecimal"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_30sdp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/schedule_meeting_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button"
                android:enabled="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="Schedule" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@drawable/button"
                android:enabled="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="Cancel" />


        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
